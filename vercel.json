{
    "version": 2,
    "installCommand": "pip install pipenv && pipenv install",
    "buildCommand": "pipenv shell && python manage.py collectstatic --noinput",
    "builds": [
        {
            "src": "quizz_django/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "Python3.12"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        },
        {
            "src": "staticfiles/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "quizz_django/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "manage.py"
        }
    ],
    "outputDirectory": "staticfiles"
}